{% extends "AppBundle:Twig:layout.html.twig" %}
{% block style %}
{% spaceless %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('css/1-col-portfolio.css') }}"/>
{% endspaceless %}
{% endblock %}
{% block content %}
<div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Image Search
                    <small>Try with image title / description / uploaders username</small>
                </h1>
            </div>
            <div class="col-lg-8">
                <form name="form" method="get" action="{{path('_search')}}" class="form-inline">
                    <fieldset>
                        <div id="form">
                            <div class="form-group">
                                <label for="search">Search for images: </label>
                                <input type="search" name="q" id="search" required="required" class="form-control" placeholder="{{app.request.query.get('q')|default('Search')}}" />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            {% if app.request.query.get('q') is not null %}
            <div class="col-lg-4">
            <div class="btn-group">
                        <a href="#" class="btn btn-primary btn-small">Sort By</a>
                        <a href="#" class="btn btn-primary btn-small dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                          <li><a href="{{path('_search',{'q': app.request.query.get('q'), 'page': pageManager.getPage, 'sortBy':'created', 'order':pageManager.getOrder})}}">Date Created</a></li>
                          <li><a href="{{path('_search',{'q': app.request.query.get('q'), 'page': pageManager.getPage, 'sortBy':'owner', 'order':pageManager.getOrder })}}">User</a></li>
                          <li><a href="{{path('_search',{'q': app.request.query.get('q'), 'page' : pageManager.getPage, 'sortBy':'title', 'order':pageManager.getOrder })}}">Title</a></li>
                        </ul>
                    </div>
                    <div class="btn-group">
                        <a href="#" class="btn btn-success btn-small">Order</a>
                        <a href="#" class="btn btn-success btn-small dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                          <li><a href="{{path('_search',{'q' : app.request.query.get('q'), 'page' : pageManager.getPage, 'sortBy': pageManager.getSortBy, 'order' : 'ASC' })}}">Ascending</a></li>
                          <li><a href="{{path('_search',{'q' : app.request.query.get('q'), 'page' : pageManager.getPage, 'sortBy': pageManager.getSortBy, 'order' : 'DESC' })}}">Descending</a></li>
                        </ul>
                    </div>
                </div>
            {% endif %}
        </div>
        {% if content|length > 0 %}<hr>{% endif %}
        <!-- /.row -->

        <!-- Project One -->
        {% for item in content %}
            <div class="row">
                <div class="col-md-3">
                    <a href='{{path('_image', { 'id' : item.getId })}}'>
                        <img src='{{ (item.getFileName~'.'~item.getExtension) | imagine_filter('thumb')}}' class="img-responsive">
                    </a>
                </div>
                <div class="col-md-5">
                    <h3>{{item.gettitle}}</h3>
                    <h4>Uploaded by: <a>{{item.getowner.getusername}}</a></h4>
                    <p>{{item.getdescription}}</p>
                    <a class="btn btn-primary" href='{{path('_image', { 'id' : item.getId })}}'>View Image <span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
            </div>
        {% if content|length > 1 %}<hr>{% endif %}
        {% endfor %}
               <!-- Pagination -->
        {% if pageManager is defined %}
            {% if pageManager.getPagination|length > 1 %}
                <div class="row text-center">
                    <div class="col-lg-12">
                        <ul class="pagination">
                            <li><a href='{{ path('_search', { 'q' : app.request.query.get('q'), 'page': 1, 'sortBy' : pageManager.getSortBy, 'order' : pageManager.getOrder }) }}'>&laquo;</a></li>
                            {% for x in pageManager.getPagination %}
                                <li {% if x == pageManager.getPage %}class="active"{% endif %}>
                                    <a href='{{ path('_search', { 'q' : app.request.query.get('q'), 'page': x, 'sortBy' : pageManager.getSortBy, 'order' : pageManager.getOrder }) }}'>{{ x }}</a>
                                </li>
                            {% endfor %}
                            <li><a href='{{ path('_search', { 'q' : app.request.query.get('q'), 'page': pageManager.getLastPage, 'sortBy' : pageManager.getSortBy, 'order' : pageManager.getOrder }) }}'>&raquo;</a></li>
                        </ul>
                    </div>
                </div>
            {% endif %}
        {% endif %}
</div>
{% endblock %}
