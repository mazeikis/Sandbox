{% extends "AppBundle:Twig:layout.html.twig" %}
{% block style %}
{% spaceless %}
    {{parent()}}
{% endspaceless %}
{% endblock %}
{% block content %}
       <div class="container" style="padding-top: 70px">
       {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="page-header">Login form:</h1>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <h4>You have already logged in as 
                        <a href="{{ path('_user', { id : app.user.id })}}">{{app.user.username}}</a>.</h4>
                        <a href="{{ path('logout') }}" class="btn btn-md btn-danger">Logout</a>
                    {% else %}
                    {{ form(form, { 'style': 'horizontal', 'col_size': 'xs', 'label_col' : 3, 'widget_col': 3}) }}
                    {{ form_start(form, { 'style': 'horizontal', 'col_size': 'xs' }) }}
                    {{ bootstrap_set_col_size('xs') }}
                    {% endif %}
                </div>
            </div>
        </div>
{% endblock %}
