{% extends "AppBundle:Twig:layout.html.twig" %}
{% block style %}
{% spaceless %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('css/4-col-portfolio.css') }}"/>
{% endspaceless %}
{% endblock %}
{% block content %}
 <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Image Gallery
                    <small>8 Images at a time</small></h1>
                    <div class="btn-group">
                        <a href="#" class="btn btn-primary btn-xs">Sort By</a>
                        <a href="#" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                          <li><a href="{{path('_gallery',{ 'page' : page|default(1), 'sortBy': 'created', 'order' : order|default('DESC') })}}">Date</a></li>
                          <li><a href="{{path('_gallery',{ 'page' : page|default(1), 'sortBy': 'owner', 'order' : order|default('DESC') })}}">User</a></li>
                          <li><a href="{{path('_gallery',{ 'page' : page|default(1), 'sortBy': 'title', 'order' : order|default('DESC') })}}">Title</a></li>
                        </ul>
                    </div>
                    <div class="btn-group">
                        <a href="#" class="btn btn-success btn-xs">Order</a>
                        <a href="#" class="btn btn-success btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                          <li><a href="{{path('_gallery',{ 'page' : page|default(1), 'sortBy': sortBy|default('created'), 'order' : 'ASC' })}}">Ascending</a></li>
                          <li><a href="{{path('_gallery',{ 'page' : page|default(1), 'sortBy': sortBy|default('created'), 'order' : 'DESC' })}}">Descending</a></li>
                        </ul>
                    </div>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <a class="btn btn-info btn-xs pull-right" href="{{path('_upload')}}">upload image</a><br><br>
                    {% else %}
                        <a class="btn btn-info btn-xs pull-right" disabled="disabled">upload image</a><br><br>
                    {% endif %}
            </div>
            {% if app.session.flashBag.has('success') %}
            <div class="col-lg-12">
                <div class="alert alert-success">
                    {% for msg in app.session.flashBag.get('success') %}
                        <strong>{{ msg }}</strong>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
        <!-- /.row -->

        <!-- Gallery Grid -->
        <div class="row">
        {% if content is defined %}
            {% for item in content %}
                <div class="col-md-3 portfolio-item">
                    <a href='{{path('_image', { 'id' : item.getId })}}'>
                        <img src='{{ (item.getFileName~'.'~item.getExtension) | imagine_filter('thumb')}}' class="img-responsive">
                    </a>
                </div>
            {% endfor %}
        {% endif %}
            
        <!-- End of Grid -->

        <!-- Pagination -->
    {% if pageList is defined and pageList|length > 1 %}
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li><a href='{{ path('_gallery', { 'page': 1, 'sortBy' : sortBy|default('created'), 'order' : order|default('DESC')}) }}'>&laquo;</a></li>
                    {% for x in pageList %}
                        <li {% if x == page %}class="active"{% endif %}>
                            <a href='{{ path('_gallery', { 'page': x, 'sortBy' : sortBy|default('created'), 'order' : order|default('DESC')}) }}'>{{ x }}</a>
                        </li>
                    {% endfor %}
                    <li><a href='{{ path('_gallery', { 'page': lastPage, 'sortBy' : sortBy|default('created'), 'order' : order|default('DESC')}) }}'>&raquo;</a></li>
                </ul>
            </div>
        </div>
    {% endif %}
    </div>
</div>
{% endblock %}