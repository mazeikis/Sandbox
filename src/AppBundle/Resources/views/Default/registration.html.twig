{% extends "AppBundle:Default:index.html.twig" %}
{% block content %}
<div class="container" style="padding-top:70px">
    <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">User registration
                        <small>You know the drill - just fill out the form</small>
                    </h1>
                </div>
            </div>
    {% if form is defined %}
     <div class="row">
        <div class="col-md-5">
    		{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    		{{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
      		<fieldset>
    			{{ form_widget(form) }}
    		</fieldset>
    		{{ form_end(form) }}
    	</div>
    </div>
</div>
{% endif %}
{% endblock %}