{% extends "AppBundle:Default:index.html.twig" %}
{% block style %}
{% spaceless %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('css/1-col-portfolio.css') }}"/>
{% endspaceless %}
{% endblock %}
{% block content %}
<div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Image Search
                    <small>Try with image title / description / uploaders username</small>
                </h1>
            </div>
            <div class="col-lg-8">
                <form name="form" method="get" action="{{path('_search')}}" class="form-inline">
                    <fieldset>
                        <div id="form">
                            <div class="form-group">
                                <label for="search">Search for images: </label>
                                <input type="search" name="q" id="search" required="required" class="form-control" placeholder="{{app.request.query.get('q')|default('Search')}}" />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
        <hr>
        <!-- /.row -->

        <!-- Project One -->
        {% if result is defined %}
            {% for item in result %}
                <div class="row">
                    <div class="col-md-3">
                        <a href='{{path('_image', { 'id' : item.getId })}}'>
                            <img src='{{ (item.getFileName~'.'~item.getExtension) | imagine_filter('thumb')}}' class="img-responsive">
                        </a>
                    </div>
                <div class="col-md-5">
                <h3>{{item.gettitle}}</h3>
                <h4>Uploaded by: <a>{{item.getowner.getusername}}</a></h4>
                <p>{{item.getdescription}}</p>
                <a class="btn btn-primary" href='{{path('_image', { 'id' : item.getId })}}'>View Image <span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
        </div>

        <hr>
            {% endfor %}
        {% endif %}
               <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
                    </li>
                    <li class="active">
                        <a href="#">1</a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
   {% endblock %}